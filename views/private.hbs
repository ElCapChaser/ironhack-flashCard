<div id="profileHeader">
    <div>
        <h1>{{user.name}}'s Profile</h1>
    <h4>Bootcamp: {{#if user.fullTime}}Full Time{{else}}Part Time{{/if}}</h4>
<img src="{{user.profilePicture}}" alt="awesome profile pic">
    </div>
    <div id="stats">
        <img src="/growth.svg" alt="stats" height="120">
        <h4> Stats:</h4>
        <p id="userHighscore">Highscore: {{user.highscore}}</p>
        <p>Current Correct Answer Streak: {{user.correctAnswerStreak}} </p>
<p id="reminders">
    <img src="/reminders.svg" alt="reminderIcon" height="80">
    <button> <a href="/private/reminders">My reminders</a></button>

</p>
    </div>
    
</div>



 {{#if cards}}
<h4 id="yourCards">My cards: </h4>
<div id="createdCards">
   
    {{#each cards}}
    <a href="/choicecard/{{this._id}}">
        <div id="singleCard">
            <h4>{{questionTitle}}</h4>
            <p>{{questionDescription}}</p>
        <small>Upvotes: {{upvotes}} - Errorvotes: {{errorvotes}}</small>
        </div>
    </a>
    {{/each}}

</div>
{{/if}}



