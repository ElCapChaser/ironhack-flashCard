{{#if user}}
<form action="/flashcard/{{flashcard._id}}/upvote" method="POST"><button>Upvote!</button></form>
<form action="/flashcard/{{flashcard._id}}/errorvote" method="POST"><button>Flag an Error!</button></form>


{{!-- check if user is creater of this flashcard. only then show delete and edit button --}}
{{#if isCreator}}
<button><a href="/flashcard/{{flashcard._id}}/delete">Delete this flashcard</a></button>
<button><a href="/flashcard/{{flashcard._id}}/update">Edit this flashcard</a></button>
{{/if}}

{{/if}}


<form action="/flashcard/{{flashcard._id}}/new-comment" method="POST">
    <input type="text" id="input-comment" name="comment" placeholder="Leave a comment here!" maxlength="140" required>
    <button>Submit comment</button>
</form>


<script>
    const answer = document.getElementById('displayAnswer')
    const answerButton = document.getElementById('answerButton'); 
    answerButton.addEventListener('click', 
        ()=> {
            answer.style.display = "block"
        })

</script>